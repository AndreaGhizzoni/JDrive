<?xml version="1.0" encoding="UTF-8"?>
<!--
- How to change the output level, before put in production?
> change the level o every loggers into INFO

-->
<Configuration strict="true">
    <!-- List of properties -->
    <Properties>
        <Property name="logFileName">log</Property>
        <Property name="logFilePath">log/${logFileName}</Property>
        <Property name="pattern">
            %d{HH:mm:ss yyyy-MM-dd} | %-5p | %t | %C{1}.%M: %m%n
        </Property>
    </Properties>

    <!-- List of appender, responsibly to display the log somewhere -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>
        <!-- immediateFlush="false" for better SSD lifetime -->
        <File name="File" fileName="${logFilePath}" immediateFlush="false" append="false">
            <PatternLayout pattern="${pattern}"/>
        </File>
    </Appenders>

    <!-- List of Logger to retrieve with LogManager.getLogger() -->
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
<!--
================================================================================
======= File Loggers
================================================================================
-->
        <Logger name="fileLog" level="all" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>

<!--
================================================================================
======= Console Loggers
================================================================================
-->
        <!-- logger for package it.hackcafffebabe.jdrive.z_testingstuff -->
        <Logger name="MyTest" level="all" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="DownloadManager" level="all" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- logger for package it.hackcafffebabe.jdrive -->
        <Logger name="Launcher" level="all" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- logger for package it.hackcafffebabe.jdrive.fs -->
        <Logger name="Watcher" level="all" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="WatcherCache" level="all" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="Syncer" level="all" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- logger for package it.hackcafffebabe.jdrive.auth.google -->
        <Logger name="GoogleAuthenticator" level="all" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- logger for package it.hackcafffebabe.jdrive.cfg -->
        <Logger name="Configurator" level="all" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

    </Loggers>
</Configuration>